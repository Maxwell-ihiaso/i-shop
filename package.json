{
  "name": "ecommerce-app",
  "version": "1.0.0",
  "description": "A fullstack ecommerce app with microservices",
  "main": "index.js",
  "repository": "https://github.com/Maxwell-ihiaso/i-shop.git",
  "author": "Maxwell (torchLight) Ihiaso",
  "license": "ISC",
  "scripts": {
    "lint": "prettier --write \"**/*.ts\"",
    "prepare": "husky install"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "**/*.ts": [
      "yarn run lint",
      "git add"
    ]
  },
  "devDependencies": {
    "husky": "^8.0.0",
    "lint-staged": "^13.2.2",
    "prettier": "^2.8.8"
  }
}
